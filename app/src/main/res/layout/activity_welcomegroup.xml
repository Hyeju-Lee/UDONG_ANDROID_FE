<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".welcomegroupActivity">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="환영합니다"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:text="어떤 우동이 좋으신가요?"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/makegroupbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="우리 동아리 개설하기" />

            <Button
                android:id="@+id/searchgroupbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="우리 동아리 가입하기" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="동아리를 개설하신 분이 자동으로 회장이 됩니다"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/groupname"
                        android:layout_width="360dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:hint="동아리 이름"
                        android:padding="10dp"
                        android:textColor="#E7D5FC"
                        android:textColorHint="#E7D5FC" />

                    <EditText
                        android:id="@+id/groupnumber"
                        android:layout_width="360dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:hint="동아리 기수"
                        android:padding="10dp"
                        android:textColor="#E7D5FC"
                        android:textColorHint="#E7D5FC" />

                    <LinearLayout
                        android:layout_width="360dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/groupcode"
                            android:layout_width="270dp"
                            android:layout_height="match_parent"
                            android:hint="가입코드 예)solux-is-best"
                            android:padding="10dp"
                            android:textColor="#E7D5FC"
                            android:textColorHint="#E7D5FC" />

                        <Button
                            android:id="@+id/button2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="중복확인"
                            app:backgroundTint="#E7D5FC" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="        동아리 소개"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/introgroup"
                        android:layout_width="wrap_content"
                        android:layout_height="101dp"
                        android:layout_gravity="center"
                        android:ems="17"
                        android:gravity="start|top"
                        android:inputType="text"
                        android:maxLength="50"
                        android:background="@drawable/textviewpretty"
                        android:privateImeOptions="defaultInputmode=korean" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="        동아리 직급"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="360dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/groupjob"
                            android:layout_width="270dp"
                            android:layout_height="match_parent"
                            android:hint="회장, 총무는 필수값입니다."
                            android:padding="10dp"
                            android:textColor="#E7D5FC"
                            android:textColorHint="#E7D5FC" />

                        <Button
                            android:id="@+id/jobaddbutton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="추가하기"
                            app:backgroundTint="#E7D5FC" />
                    </LinearLayout>

                    <ListView
                        android:id="@+id/listView1"
                        android:layout_width="match_parent"
                        android:layout_height="192dp"></ListView>

                </LinearLayout>
            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>