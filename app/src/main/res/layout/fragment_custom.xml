<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="   이름"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/nameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:textColor="#E7D5FC"
                    android:textColorHint="#E7D5FC" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="   아이디"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/idText"
                        android:layout_width="313dp"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:textColor="#E7D5FC"
                        android:textColorHint="#E7D5FC" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="중복확인"
                        app:backgroundTint="#E7D5FC" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="   비밀번호"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/passwordText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textColor="#E7D5FC"
                    android:textColorHint="#E7D5FC" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="   비밀번호확인"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/passwordcheckText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textColor="#E7D5FC"
                    android:textColorHint="#E7D5FC" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="   생년월일"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="#E7D5FC"
                    android:text="생년월일"
                    android:textSize="20dp"
                    app:backgroundTint="#E7D5FC" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="   전화번호"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/numberText"
                        android:layout_width="313dp"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:textColor="#E7D5FC"
                        android:textColorHint="#E7D5FC" />

                    <Button
                        android:id="@+id/numberCheckbutton"
                        android:layout_width="310dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="인증번호 전송"
                        app:backgroundTint="#E7D5FC" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="   인증번호확인"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/numberCheck"
                        android:layout_width="313dp"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:textColor="#E7D5FC"
                        android:textColorHint="#E7D5FC" />

                    <Button
                        android:id="@+id/numberCheckbutton2"
                        android:layout_width="310dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="확인"
                        app:backgroundTint="#E7D5FC" />
                </LinearLayout>

                <Button
                    android:id="@+id/registerButton"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="#E7D5FC"
                    android:text="회원가입 하기"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:backgroundTint="#E7D5FC" />


                    </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>